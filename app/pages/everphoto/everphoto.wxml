<!--pages/everphoto/everphoto.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
  <view class="page__hd">
    <view class="page__title" style="margin-left:1rem">配置账号</view>
  </view>
  <view class="page_bd">
    <mp-form id="form" rules="{{rules}}" models="{{formData}}">
      <mp-cells title="" footer="">
        <mp-cell prop="account" title="手机(+86)" ext-class="">
          <input bindinput="formInputChange" type="number" value="{{formData.account}}" data-field="account"
            class="weui-input" placeholder="请输入账号" />
        </mp-cell>
        <mp-cell prop="password" title="密码" ext-class="">
          <input bindinput="formInputChange" type="password" value="{{formData.password}}" data-field="password"
            class="weui-input" placeholder="请输入密码" />
        </mp-cell>
        <mp-cell prop="time" title="执行时间" ext-class="">
          <picker data-field="date" mode="time" value="{{runTime}}" bindchange="bindDateChange">
            <view class="weui-input">{{runTime}}</view>
          </picker>
        </mp-cell>
      </mp-cells>
    </mp-form>

  </view>
  <view style="margin-top:1rem">
    <button class="weui-btn" form-type="submit" type="primary" bindtap="submitForm">保存</button>
  </view>
  <mp-cells title="配置选项">
    <mp-cell link hover value="删除配置" footer="" bindtap="deleteAccount">
      <mp-icon slot="icon" icon="delete" color="red" size="{{25}}"></mp-icon>
    </mp-cell>
    <mp-cell link hover url="/pages/everphoto_log/everphoto_log" value="查看日志" footer="">
      <mp-icon slot="icon" icon="note" color="green" size="{{25}}"></mp-icon>
    </mp-cell>
  </mp-cells>

</view>